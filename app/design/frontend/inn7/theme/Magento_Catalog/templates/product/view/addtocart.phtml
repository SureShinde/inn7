        require(
            [
                'jquery',
                'Magento_Ui/js/modal/modal'
            ],
            function(
                $,
                modal
            ) {
                var options = {
                    type: 'popup',
                    responsive: true,
                    innerScroll: true,
                    title: '',
                    buttons: [{
                        text: $.mage.__(''),
                        class: '',
                        click: function () {
                            this.closeModal();
                        }
                    }]
                };

                var popupchart = modal(options, $('#chart-pop'));
                $(".chart-pop-link").on('click',function(){
                    $("#chart-pop").modal("openModal");
                });
            }
        );
    </script>
